        cursor pointer
    spanhover
        color red
        text-decoration underline
    .active
        color red
        text-decoration underline

div.technology
    text-align left
    div
        border-bottom 1px dashed white
    dt
        margin 20px 0
        font-size 32px
        display inline-block
        min-width 200px
    dd
        display inline-block
        margin 20px 35px
        a
          font-size 28px
          text-decoration none
    h1
        text-align center
        text-decoration underline

.registration.error
    color red
    font-size 10px

#log-in
    span.head-registration
        margin-right 100px

form.login
  input
    border 1px solid white
    padding 7px 13px
    font-size 12px
  input[type=text], input[type=password]
    width 250px
    margin 0 10px
  input:focus
    background white
    color black
    outline none
  input[type=submit]
    background white
    color black
    cursor pointer
  input[type=submit]:hover
    background white
    color black
  span.label
    display inline-block
    font-size 14px

.registration-form
    padding-top 25px
    > div
      margin-bottom 20px
      input
        border 1px solid white
        padding 7px 13px
        background transparent
        color white
        font-size 12px
      input[type=text], input[type=password]
        width 250px
      input:focus
        background white
        color black
        outline none
      input[type=submit]
        cursor pointer
      input[type=submit]:hover
        background white
        color black
    span.label
        width 100px
        display inline-block
        font-size 14px

.registration-form > div.error-register
    margin 0
    position absolute
    top 0
    text-align right

form.registration
    position relative
    display inline-block

#log-in input.empty, form.registration .empty
    border 1px solid red

.registration.success
    text-align right
    div
        font-size 12px

.user.enter
    margin 20px 0